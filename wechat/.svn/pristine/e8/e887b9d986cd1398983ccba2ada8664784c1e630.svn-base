					icon: 'none'
				})
				this.getList()
			},
		async getMember(){
			const res=await getMemberMsg(this.token);
			this.memberData = res.data
				this.goodsList.forEach((item,index)=>{
				if(this.memberData.membershipStatus == 0){
					item.goodsPresentPrice = item.list[0].goodsPresentPrice
				} else{
					item.goodsPresentPrice = item.list[0].goodsVipPrice
				}
			
			})
			console.log('123456~~~~~~~')
