		goLogin(){
			uni.navigateTo({
				url: '../login/login'
			})
		},
		
		async getList(){
				const res=await totalNum(this.token);
				console.log(res);
				if(res.msg=='ERROR TOKEN') return
				res.data.shoppingCartVoIPage.records.map(item=>{
					item.flag=false
				});
				this.goodsList=res.data.shoppingCartVoIPage.records
