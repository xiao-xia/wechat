<template>
	<view class="beizhu">
		<view class="box">
			<textarea  placeholder='填写商品、配送补充说明' maxlength='50' class='text'
			v-model="value" @input="limit">
			 </textarea>
			 <view class="num">
			 	{{value.length}}/50
			 </view>
		</view> 
		 <view class="input">
		   快捷输入
		 </view>
		 <view class="confirm" @click="sure">
		 	完成
		 </view>
	</view>
</template>

<script>
	export default{
		data(){
			return{
				value:''
			}
		},
		onLoad(options) {
			this.value=options.value
		},
		methods:{
			sure(){
				uni.$emit('beizhu',{
					text:this.value
				})
				uni.navigateBack({ });
			},
			limit(){
				if(this.value.length==50){
					uni.showToast({
						title:'最多50字哦',
						icon:'none'
					})
				}
			}
		}
	}
</script>

