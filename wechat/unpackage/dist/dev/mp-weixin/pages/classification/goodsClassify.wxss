page {
  height: 100%;
  background-color: #FFFFFF;
}
page .classification {
  height: 100%;
}
page .classification .search {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
}
page .classification .search .searchcrux {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  background: #EDEDF0;
  border-radius: 50rpx;
  position: relative;
}
page .classification .search .searchcrux .find {
  margin-left: 20rpx;
}
page .classification .search .searchcrux .searchinp {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  padding-left: 20rpx;
}
page .classification .main {
  display: flex;
}
page .classification .main .left {
  width: 30%;
  height: calc(100vh - 100rpx);
  background-color: #eee;
}
page .classification .main .left view {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .classification .main .left .active {
  color: #008CFF;
  background-color: #FFFFFF;
  position: relative;
}
page .classification .main .left .shu {
  position: absolute;
  width: 8rpx;
  height: 50rpx;
  top: 50%;
  left: 0;
  border-radius: 50rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-color: #008CFF;
}
page .classification .main .registItem {
  width: 75%;
  display: flex;
  align-content: flex-start;
  flex-wrap: wrap;
}
page .classification .main .registItem .registBox {
  width: 33.3%;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
page .classification .main .registItem .registBox .registration {
  width: 100rpx;
  height: 100rpx;
  background-color: #EAF7FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
page .classification .main .registItem .registBox .registration .registrationImg {
  width: 60rpx;
  height: 60rpx;
}
page .classification .main .registItem .registBox .registraWold {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .classification .main .rightList {
  width: 75%;
  height: calc(100vh - 100rpx);
}
page .classification .main .list .right {
  padding: 20rpx;
  display: flex;
  border-bottom: 1px solid #f0f0f0;
}
page .classification .main .list .right .photo {
  width: 200rpx;
  height: 200rpx;
}
page .classification .main .list .right .photo image {
  width: 100%;
  height: 100%;
}
page .classification .main .list .right .detail {
  width: 60%;
  padding-left: 20rpx;
}
page .classification .main .list .right .button {
  display: flex;
  justify-content: flex-end;
}
page .classification .main .list .right .button .change {
  display: flex;
  width: 100rpx;
  height: 50rpx;
  justify-content: center;
  line-height: 50rpx;
  background-color: #E7FFE6;
  position: relative;
  margin-right: 20rpx;
}
page .classification .main .list .right .button .change image {
  width: 100%;
  height: 100%;
}
page .classification .main .list .right .button .change .add {
  top: 0;
  left: -20rpx;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
}
page .classification .main .list .right .button .change .sub {
  top: 0;
  right: -20rpx;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
}

