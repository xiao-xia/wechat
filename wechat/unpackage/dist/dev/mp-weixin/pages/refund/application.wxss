.message {
  padding: 20rpx;
  background-color: #FFFFFF;
}
.message .first {
  font-size: 32rpx;
}
.message .theme {
  margin-bottom: 10rpx;
  color: #aaa;
}
.message .theme .copy {
  display: inline-block;
  color: var(--button);
  border: 1px solid var(--button);
  margin-left: 20rpx;
  font-size: 20rpx;
  width: 50rpx;
  text-align: center;
}
.goods {
  margin-top: 20rpx;
  border-bottom: 1px solid #eee;
  background-color: #FFFFFF;
  padding: 40rpx 20rpx;
}
.goods .discrible {
  display: flex;
  width: 100%;
  margin-bottom: 20rpx;
}
.goods .discrible .photo {
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.goods .discrible .photo image {
  width: 100%;
  height: 100%;
}
.goods .discrible .typebox {
  width: 500rpx;
  display: flex;
  justify-content: space-between;
}
.goods .button {
  display: flex;
  margin-top: 20rpx;
  justify-content: flex-end;
}
.goods .button view {
  border: 1px solid #EEEEEE;
  font-size: 24rpx;
  border-radius: 40rpx;
  width: 150rpx;
  text-align: center;
}
.goods .button .cart {
  margin-right: 20rpx;
}
.totalbox {
  background-color: #FFFFFF;
  padding: 40rpx 20rpx 20rpx;
  margin-bottom: 20rpx;
}
.totalbox .item {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.totalbox .item text {
  color: red;
}
.reason {
  display: flex;
  margin-top: 40rpx;
}
.reason .choose {
  display: flex;
  justify-content: space-between;
  border: 1px solid #ccc;
  width: 500rpx;
  color: #ccc;
}
.submit {
  text-align: center;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 60rpx auto 0;
  background-color: var(--button);
  color: #fff;
  border-radius: 20rpx;
}

