.top {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
}
.top .search {
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  background-color: #EDECF1;
}
.top .search input {
  width: 520rpx;
  height: 100%;
}
.top .btn {
  background-color: #06c35f;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
}
.excontent {
  width: 100%;
  padding: 20rpx 20rpx;
}
.excontent .paddcontent .excontentone {
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.excontent .paddcontent .excontentone .onecontent {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.excontent .paddcontent .excontentone .onecontent .onecont {
  font-size: 30rpx;
  color: #666666;
}
.excontent .paddcontent .excontentone .onecontent .remember {
  width: 90%;
  font-size: 26rpx;
  color: #BABFC2;
  display: flex;
  justify-content: space-between;
}
.excontent .paddcontent .excontentone .contentimg {
  width: 200rpx;
  margin-top: 15rpx;
  border-radius: 15rpx;
  background-color: #ccc;
  position: relative;
}
.excontent .paddcontent .excontentone .contentimg .centerimg {
  height: 180rpx;
  display: block;
  border-radius: 15rpx;
}
.excontent .paddcontent .excontentone .contentimg .contentwhite, .excontent .paddcontent .excontentone .contentimg .contentcneter {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

