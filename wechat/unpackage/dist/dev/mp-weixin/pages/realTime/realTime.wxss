.contentBack {
  width: 100%;
  height: 210rpx;
  padding: 0 30rpx;
  background-color: #FFFFFF;
}
.contentBack .contentTop {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.contentBack .contentTop .posit {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  width: 300rpx;
  position: relative;
}
.contentBack .contentTop .posit .out {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  top: 60rpx;
  left: 10rpx;
  width: 300rpx;
  padding: 5rpx;
  z-index: 999;
  border-radius: 20rpx;
}
.contentBack .contentTop .posit .positimg {
  width: 40rpx;
  height: 40rpx;
  margin-top: 12rpx;
}
.contentBack .contentTop .posit .city-text {
  height: 60rpx;
  font-size: 28rpx;
  width: 250rpx;
}
.contentBack .contentTop .search {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  background: #EDEDF0;
  border-radius: 50rpx;
  position: relative;
}
.contentBack .contentTop .search .searchimg {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
  top: 10rpx;
}
.contentBack .contentTop .search .searchinp {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #aaa;
  padding-left: 30rpx;
  margin-left: 40rpx;
}
.contentBack .bar {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 9999;
}
.contentBack .bar .barBlockStyle {
  font-size: 28rpx;
  color: #008CFF;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}
.contentBack .bar .barBlock {
  font-size: 28rpx;
  color: #101010;
  line-height: 100rpx;
  text-align: center;
}
.contentBack .bar .shu {
  width: 60rpx;
  height: 10rpx;
  border-radius: 50rpx;
  background-color: #008CFF;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  position: absolute;
  left: 20rpx;
}
.realItem {
  width: 100%;
  padding: 20rpx;
}
.realItem .TimeNew {
  width: 100%;
  background-color: #FFFFFF;
}
.realItem .TimeNew .NewBox {
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.realItem .TimeNew .NewBox .about {
  font-size: 28rpx;
  font-weight: 600;
  width: 100%;
  overflow: hidden;
  /*必须结合的属性,当内容溢出元素框时发生的事情*/
  text-overflow: ellipsis;
  /*可以用来多行文本的情况下，用省略号“…”隐藏超出范围的文本 。*/
  display: -webkit-box;
  /*必须结合的属性 ，将对象作为弹性伸缩盒子模型显示 。*/
  -webkit-line-clamp: 2;
  /*用来限制在一个块元素显示的文本的行数。*/
  -webkit-box-orient: vertical;
  /*必须结合的属性 ，设置或检索伸缩盒对象的子元素的排列方式 。*/
}
.realItem .TimeNew .NewBox .newType {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}
.realItem .TimeNew .NewBox .newType .right {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #C4E3FD;
  color: #088EFE;
  text-align: center;
  border-radius: 10rpx;
}
.realItem .TimeNew .NewBox .newType .left {
  width: 75%;
  justify-content: flex-end;
  display: flex;
}
.realItem .TimeNew .NewBox .newType .left .source {
  font-size: 26rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
}

