.goodsItem {
  width: 100%;
}
.goodsItem .goodssearch {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
}
.goodsItem .goodssearch .search {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  background: #f8f8f8;
  border-radius: 50rpx;
  position: relative;
}
.goodsItem .goodssearch .search .searchimg {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}
.goodsItem .goodssearch .search .searchinp {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666666;
  padding-left: 30rpx;
  margin-left: 40rpx;
}
.goodsItem .alluptodate {
  width: 100%;
}
.goodsItem .alluptodate .alluptodatetion {
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
}
.goodsItem .alluptodate .alluptodatetion .titleActive {
  color: #008CFF;
}
.goodsItem .alluptodate .alluptodatetion view {
  font-size: 28rpx;
  text-align: center;
}
.goodsItem .alluptodate .alluptodatetion .newest, .goodsItem .alluptodate .alluptodatetion .recommend {
  margin-left: 60rpx;
}
.goodsItem .alluptodate .alluptodatetion .cur {
  border-bottom: 4rpx solid green;
}
.goodsItem .alluptodate .SpecialReview {
  display: flex;
  flex-wrap: wrap;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack {
  width: 94%;
  background-color: #f6fdf5;
  border-radius: 20rpx;
  margin: 20rpx 0 0 20rpx;
  box-shadow: 0 5rpx 5rpx #e6e6e6;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox {
  margin: 20rpx 20rpx 20rpx 20rpx;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox .Specialreport {
  font-size: 28rpx;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox .SpecialWold {
  font-size: 28rpx;
  color: #dbd6d3;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox .reviewBox {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox .reviewBox .reportWord .wordColor {
  color: #f77a76;
  font-size: 32rpx;
  line-height: 1;
  display: flex;
  align-items: center;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox .reviewBox .reportWord .wordColor .sizeColor {
  color: #CCCCCC;
  font-size: 24rpx;
  text-decoration: line-through;
  line-height: 1;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.goodsItem .alluptodate .SpecialReview .SpecialBack .SpecialBox .reviewBox .reportCircular {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  color: #fff;
  background-image: linear-gradient(to bottom, #F66933, #F7AF22);
  text-align: center;
  margin-left: 10rpx;
}
.goodsItem .alluptodate .excontent {
  width: 100%;
  padding: 20rpx 20rpx;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone {
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone .onecontent {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone .onecontent .onecont {
  font-size: 30rpx;
  color: #666666;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone .onecontent .remember {
  width: 90%;
  font-size: 26rpx;
  color: #BABFC2;
  display: flex;
  justify-content: space-between;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone .contentimg {
  width: 200rpx;
  margin-top: 15rpx;
  border-radius: 15rpx;
  background-color: #ccc;
  position: relative;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone .contentimg .centerimg {
  height: 180rpx;
  display: block;
  border-radius: 15rpx;
}
.goodsItem .alluptodate .excontent .paddcontent .excontentone .contentimg .contentwhite, .goodsItem .alluptodate .excontent .paddcontent .excontentone .contentimg .contentcneter {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

