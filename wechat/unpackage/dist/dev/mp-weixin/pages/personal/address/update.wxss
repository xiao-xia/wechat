.topItem {
  width: 100%;
  height: 300rpx;
  background-color: #FFF;
}
.topItem .nameItem {
  height: 100rpx;
  display: flex;
  padding: 0 8rpx 0 26rpx;
}
.topItem .nameItem .inputTitle {
  width: 20%;
  height: 100rpx;
  font-size: 28rpx;
  color: #000;
  line-height: 100rpx;
}
.topItem .nameItem .inputBlock {
  width: 80%;
  height: 100rpx;
  border-bottom: 1rpx solid #F4F2F2;
  display: flex;
  align-items: center;
}
.topItem .nameItem .inputBlock .inputFrame {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.topItem .sexItem {
  height: 100rpx;
  padding: 0 8rpx 0 26rpx;
  border-bottom: 1rpx solid #F4F2F2;
}
.topItem .sexItem .sexBlock {
  width: 80%;
  height: 100rpx;
  margin-left: 20%;
  display: flex;
  align-items: center;
}
.topItem .sexItem .sexBlock .sexFrame {
  width: 120rpx;
  height: 50rpx;
  border-radius: 10rpx;
  border: 1px solid #CCCCCC;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color: #A4A5A5;
  margin-right: 16rpx;
}
.topItem .sexItem .sexBlock .sexFrame2 {
  width: 120rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #1093FE, #55AFF9);
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  margin-right: 16rpx;
}
.bottomItem {
  margin-top: 30rpx;
  width: 100%;
  height: auto;
  background-color: #FFF;
  padding: 0 8rpx;
}
.bottomItem .bottomBlock {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 26rpx;
  border-bottom: 1rpx solid #F4F2F2;
}
.bottomItem .bottomBlock .bottomTitle {
  width: 20%;
  height: 100rpx;
  font-size: 28rpx;
  color: #000;
  line-height: 100rpx;
}
.bottomItem .bottomBlock .bottomAddress {
  width: 80%;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #000;
  padding: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bottomItem .bottomBlock .iconRight {
  width: 20%;
  height: 100rpx;
  font-size: 28rpx;
  color: #A4A5A5;
  line-height: 100rpx;
  text-align: right;
}
.bottomItem .bottomBlock .picker {
  line-height: 100rpx;
}
.bottomItem .bottomBlock .inputBlock2 {
  width: 80%;
  height: 100rpx;
  border-bottom: 1rpx solid #F4F2F2;
  display: flex;
  align-items: center;
}
.bottomItem .bottomBlock .inputBlock2 .inputFrame2 {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.bottomItem .bottomBlock .tagBlock {
  width: 80%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.bottomItem .bottomBlock .tagBlock .tagFrame {
  width: 120rpx;
  height: 50rpx;
  border-radius: 28rpx;
  background-color: #f3f3f3;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color: #101010;
  margin-right: 16rpx;
}
.bottomItem .bottomBlock .tagBlock .tagFrame2 {
  width: 120rpx;
  height: 50rpx;
  border-radius: 28rpx;
  background-color: var(--button);
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  margin-right: 16rpx;
}
.save {
  background-image: linear-gradient(to right, #1093FE, #55AFF9);
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 500rpx;
  margin: 0  auto;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
}
.delete {
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #F83333;
  margin: 0  auto;
  margin-top: 20rpx;
  font-size: 32rpx;
}

