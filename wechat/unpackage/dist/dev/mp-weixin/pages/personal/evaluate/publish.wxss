.container .orderCompleted {
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
}
.container .orderCompleted .complete {
  color: #333333;
  font-weight: bold;
  font-size: 34rpx;
  margin-top: 10rpx;
}
.container .orderCompleted .evaluate {
  color: #CCCCCC;
  font-size: 25rpx;
}
.container .orderCompleted .evaluateOrder {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-top: 20rpx;
}
.container .orderCompleted .evaluateOrder .favorableBox {
  display: flex;
}
.container .orderCompleted .evaluateOrder .favorableBox .favorableImg {
  width: 36rpx;
  height: 36rpx;
}
.container .orderCompleted .evaluateOrder .favorableBox .favorableWord {
  color: #F54830;
  font-size: 26rpx;
  margin: -4rpx 0 0 10rpx;
}
.container .orderCompleted .evaluateOrder .mediumBox {
  display: flex;
}
.container .orderCompleted .evaluateOrder .mediumBox .mediumImg {
  width: 36rpx;
  height: 36rpx;
}
.container .orderCompleted .evaluateOrder .mediumBox .mediumWord {
  color: #F54830;
  font-size: 26rpx;
  margin: -4rpx 0 0 10rpx;
}
.container .orderCompleted .evaluateOrder .negativeBox {
  display: flex;
}
.container .orderCompleted .evaluateOrder .negativeBox .negativeImg {
  width: 36rpx;
  height: 36rpx;
}
.container .orderCompleted .evaluateOrder .negativeBox .mnegativeWord {
  color: #F54830;
  font-size: 26rpx;
  margin: -4rpx 0 0 10rpx;
}
.container .orderCompleted .attitude {
  display: flex;
  margin: 10rpx 0 10rpx 0;
}
.container .textItemBox {
  margin: 20rpx;
}
.container .textItemBox .textItem {
  width: 100%;
  height: 84%;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.container .textItemBox .textItem .textarea {
  height: 260rpx;
  width: 660rpx;
  border: 1px solid #CCCCCC;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 20rpx;
}
.container .textItemBox .textItem .buttonColor {
  height: 80rpx;
  width: 630rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 80rpx;
  color: #FFFFFF;
  background-image: linear-gradient(to right, #1093FE, #55AFF9);
  font-size: 34rpx;
  margin-top: 40rpx;
}

