page {
  height: 100%;
  background-color: #fff;
}
.feedback {
  color: #A4A5A5;
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 0;
}
.item {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.item input {
  text-align: right;
}
.button {
  width: 100%;
  height: 100rpx;
  background-color: #008CFF;
  color: white;
  border-radius: 0;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
}
